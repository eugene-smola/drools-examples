package pricerules

import com.smolnij.domain.Client
import java.math.BigDecimal

rule "New Toyota bargain"

    when
        $c: Client( carMake == "TOYOTA" && $c.isNewCar() )
    then
        $c.setInsurancePrice($c.getInsurancePrice().subtract($c.getInsurancePrice().multiply(new BigDecimal(0.05))));
end