package pricerules

import com.smolnij.domain.Client
import java.math.BigDecimal

rule "Sportcar fee"

    when
        $a : Client( sportCar == true )
        
    then
        $a.setInsurancePrice( $a.getInsurancePrice().add($a.getInsurancePrice().multiply(new BigDecimal(0.31))));
end

rule "Sportcar porshe fee"
    when
    	$a : Client( carMake == "PORSCHE" && sportCar == true)
    then
        $a.setInsurancePrice(  $a.getInsurancePrice().add($a.getInsurancePrice().multiply(new BigDecimal(0.18))) );
end
